#!/usr/bin/env bash

# config for herbstluftwm
# 2021-05-01 Add dunst notification daemon
# 2021-05-02 Add rule for "VirtualBox Machine" ➔ tag: remote
# 2021-05-28 Detect right-top edge and position mouse there
# 2021-06-05 Update to 0.9.3: The setting default_frame_layout now holds
#            an algorithm name

hc() {
    herbstclient "$@"
}

run() {
    if ! pgrep -f $1 ;
    then
        $@&
    fi
}

hc emit_hook reload

xsetroot -solid '#19202A'

# start conky
run conky --daemonize --pause=1

# start notification daemon (moved from .xprofile to fix font size being too big)
dunst &

if hc silent new_attr bool my_not_first_autostart ; then
    synology-cloud-station-drive autostart &
fi

# remove all existing keybindings
hc keyunbind --all

# keybindings ( Mod1 = Alt; Mod4 = Super )
# Use the super key as the main modifier
Mod=Mod4
terminal=alacritty

hc keybind $Mod-Shift-q quit
hc keybind $Mod-Shift-r reload
hc keybind $Mod-Shift-c close
hc keybind Mod4-Shift-x spawn ~/.config/utils/powermenu
hc keybind $Mod-Return spawn $terminal # use your $TERMINAL with xterm as fallback

## Application keybindings have been moved to xbindkeys

# basic movement in tiling and floating mode
# focusing clients
hc keybind $Mod-Left  focus left
hc keybind $Mod-Down  focus down
hc keybind $Mod-Up    focus up
hc keybind $Mod-Right focus right
hc keybind $Mod-h     focus left
hc keybind $Mod-j     focus down
hc keybind $Mod-k     focus up
hc keybind $Mod-l     focus right

# moving clients in tiling and floating mode
hc keybind $Mod-Shift-Left  shift left
hc keybind $Mod-Shift-Down  shift down
hc keybind $Mod-Shift-Up    shift up
hc keybind $Mod-Shift-Right shift right
hc keybind $Mod-Shift-h     shift left
hc keybind $Mod-Shift-j     shift down
hc keybind $Mod-Shift-k     shift up
hc keybind $Mod-Shift-l     shift right

# splitting frames
# create an empty frame at the specified direction
hc keybind $Mod-u       split   bottom  0.5
hc keybind $Mod-o       split   right   0.5
hc keybind $Mod-Control-o       split   right   0.66
# let the current frame explode into subframes
hc keybind $Mod-Control-space split explode

# resizing frames and floating clients
resizestep=0.02
hc keybind $Mod-Control-h       resize left +$resizestep
hc keybind $Mod-Control-j       resize down +$resizestep
hc keybind $Mod-Control-k       resize up +$resizestep
hc keybind $Mod-Control-l       resize right +$resizestep
hc keybind $Mod-Control-Left    resize left +$resizestep
hc keybind $Mod-Control-Down    resize down +$resizestep
hc keybind $Mod-Control-Up      resize up +$resizestep
hc keybind $Mod-Control-Right   resize right +$resizestep

# move to monitor
hc keybind $Mod-Shift-BackSpace shift_to_monitor +1
#hc keybind $Mod-Mod1-Right shift_to_monitor +1
#hc keybind $Mod-Mod1-Left  shift_to_monitor -1

# default frame layout: 0 vertical | 1 horizontal | 2 max | 3 grid
hc set default_frame_layout horizontal 

# tags
tag_names=( "1" "2" "3" "4" "5" "6" "7" "8" "9" )
#tag_names=( {1..9} )
tag_keys=( {1..9} 0 )

hc rename default "${tag_names[0]}" || true
for i in "${!tag_names[@]}" ; do
    hc add "${tag_names[$i]}"
    key="${tag_keys[$i]}"
    if ! [ -z "$key" ] ; then
        hc keybind "$Mod-$key" use_index "$i"
        hc keybind "$Mod-Shift-$key" move_index "$i"
    fi
done

# set default layout for 1st frame to horizontal
# default_frame_layout does not apply for this frame
hc load ${tag_names[0]} '(clients horizontal:0)'

# set default layout for "www" tag to max
# hc load "www" '(clients max:0)'

# cycle through tags
hc keybind $Mod-period use_index +1 --skip-visible
hc keybind $Mod-comma  use_index -1 --skip-visible

# layout
hc keybind $Mod-r remove
hc keybind $Mod-s floating toggle
hc keybind $Mod-f fullscreen toggle
hc keybind $Mod-Shift-f set_attr clients.focus.floating toggle
hc keybind $Mod-Shift-p pseudotile toggle
# The following cycles through the available layouts within a frame, but skips
# layouts, if the layout change wouldn't affect the actual window positions.
# I.e. if there are two windows within a frame, the grid layout is skipped.
hc keybind $Mod-space                                                           \
            or , and . compare tags.focus.curframe_wcount = 2                   \
                     . cycle_layout +1 vertical horizontal max vertical grid    \
               , cycle_layout +1

# mouse
hc mouseunbind --all
hc mousebind $Mod-Button1 move
hc mousebind $Mod-Button2 zoom
hc mousebind $Mod-Button3 resize

# focus
hc keybind $Mod-BackSpace   cycle_monitor
hc keybind $Mod-Tab         cycle_all +1
hc keybind $Mod-Shift-Tab   cycle_all -1
hc keybind $Mod-c cycle
hc keybind $Mod-i jumpto urgent

# theme
hc attr theme.tiling.reset 1
hc attr theme.floating.reset 1
hc set frame_border_active_color '#222222'
hc set frame_border_normal_color '#101010'
hc set frame_bg_normal_color '#565656'
hc set frame_bg_active_color '#345F0C'
hc set frame_border_width 1
hc set always_show_frame off
hc set frame_bg_transparent on
hc set frame_transparent_width 2
hc set frame_gap 2

hc attr theme.active.color '#AA00AA'
hc attr theme.normal.color '#454545'
hc attr theme.urgent.color orange
hc attr theme.inner_width 1
hc attr theme.inner_color black
hc attr theme.border_width 2
hc attr theme.floating.border_width 2
hc attr theme.floating.outer_width 1
hc attr theme.floating.outer_color black
hc attr theme.active.inner_color '#3E4A00'
hc attr theme.active.outer_color '#3E4A00'
hc attr theme.background_color '#141414'

hc set window_gap 1
hc set frame_padding 0
hc set smart_window_surroundings off
hc set smart_frame_surroundings on
hc set mouse_recenter_gap 0

# rules
hc unrule -F

#hc rule class=XTerm tag=3 # move all xterms to tag 3
hc rule focus=on # normally focus new clients
hc rule floatplacement=smart
#hc rule focus=off # normally do not focus new clients
# give focus to most common terminals
#hc rule class~'(.*[Rr]xvt.*|.*[Tt]erm|Konsole)' focus=on

# Clients with fixed tags
hc rule class=Code tag=code switchtag=on
hc rule class=Clementine tag=media
hc rule class=Opera tag=www
hc rule class=org.remmina.Remmina tag=remote
hc rule class="VirtualBox Machine" tag=remote

# floating clients
hc rule class=Galculator    floating=on floatplacement=smart
hc rule class=Gucharmap     floating=on floatplacement=smart
hc rule class=gl            floating=on floatplacement=smart
hc rule class=Lxappearance  floating=on floatplacement=smart
hc rule class=matplotlib    floating=on floatplacement=smart
hc rule class=Matplotlib    floating=on floatplacement=smart
hc rule class=mpv           floating=on floatplacement=smart
hc rule class=Seahorse      floating=on floatplacement=center

hc rule windowtype~'_NET_WM_WINDOW_TYPE_(DIALOG|UTILITY|SPLASH)' floating=on
hc rule windowtype='_NET_WM_WINDOW_TYPE_DIALOG' focus=on
hc rule windowtype~'_NET_WM_WINDOW_TYPE_(NOTIFICATION|DOCK|DESKTOP)' manage=off

hc set tree_style '╾│ ├└╼─┐'
hc set swap_monitors_to_get_tag 1

# unlock, just to be sure
hc unlock

# do multi monitor setup here, e.g.:
# hc set_monitors 1920x1080+0+0 1920x1080+1920+0
# or simply:
hc detect_monitors

# start polybar panels
~/.config/polybar/panel.sh &

# set focus to first monitor and position mouse top right
hc focus_monitor 0
xpos=$(hc list_monitors | rg "0:" | awk -F "x" '{ print $1 }' | awk '{ print $2-30 }')
xte "mousemove $xpos 30"
